{
  "name": "summarize",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf release",
    "parcel": "parcel build --dist-dir=release manifest.json",
    "zip": "cd release && zip -r summarize.zip . && cd ..",
    "build": "npm run clean && npm run parcel && npm run zip"
  },
  "author": "Joni Kanerva",
  "license": "MIT",
  "description": "Summarizes web articles using OpenAI's API and Mozilla's Readability parser",
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "openai": "^4.95.1"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.14.4",
    "buffer": "^6.0.3",
    "parcel": "^2.14.4",
    "process": "^0.11.10",
    "svgo": "^3.3.2"
  }
}
