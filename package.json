{
  "name": "summarize",
  "version": "1.0.6",
  "scripts": {
    "lint": "prettier --check .",
    "clean": "rm -rf release",
    "parcel": "parcel build --dist-dir=release manifest.json",
    "zip": "cd release && zip -r summarize.zip . && cd ..",
    "build": "yarn lint && yarn clean && yarn parcel && yarn zip",
    "release": "./release.sh"
  },
  "author": "Joni Kanerva",
  "license": "MIT",
  "description": "Summarizes web articles using OpenAI's API and Mozilla's Readability parser",
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dompurify": "^3.2.6",
    "openai": "^5.8.2"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.15.4",
    "@parcel/core": "^2.15.4",
    "buffer": "^6.0.3",
    "parcel": "^2.15.4",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "svgo": "^4.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "yarn@4.9.1"
}
