{
  "manifest_version": 3,
  "name": "Summarize Article with OpenAI",
  "version": "1.0.0",
  "description": "Summarizes web articles using OpenAI's API and Mozilla's Readability parser",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "html/settings.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "html/*", "src/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.png"
  }
}
