{
  "manifest_version": 3,
  "name": "Article Summarizer with OpenAI",
  "version": "1.0.5",
  "description": "Instantly summarize and analyze web articles using OpenAI's powerful language models and Mozilla's Readability.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "html/settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png",
        "icons/store-icon.png",
        "html/settings.html",
        "html/summary.html",
        "css/common.css",
        "css/settings.css",
        "css/summary.css"
      ],
      "matches": ["chrome-extension://*/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/store-icon.png"
  }
}
